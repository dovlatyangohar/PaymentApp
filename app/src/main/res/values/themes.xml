<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaymentApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Title.Black.28" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size_28</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.White.14" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title.White.22" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size_22</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title.Blue.18" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:textColor">@color/blue_200</item>
    </style>

    <style name="Title.Blue.14" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textColor">@color/blue_200</item>
    </style>

    <style name="MainButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/space_0</item>
        <item name="android:minWidth">@dimen/space_0</item>
        <item name="android:background">@color/blue_200</item>
        <item name="android:textSize">@dimen/size_22</item>
        <item name="android:padding">@dimen/space_18</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title.Red.12" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textColor">@color/red</item>
    </style>


</resources>